{
  "name": "@peterschussheim/monaco-editor",
  "version": "0.15.61",
  "description":
    "Externally hostable (multi-file) and single-file ESM builds of monaco-editor.",
  "main": "dist/standalone/monaco.min.js",
  "author":
    "Peter Schussheim <peter@schussheim.com> (https://peterschussheim.com/)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/peterschussheim/monaco-editor/issues"
  },
  "files": ["dist/standalone", "dist/external"],
  "scripts": {
    "clean": "rimraf dist",
    "build:standalone":
      "cross-env NODE_ENV=production webpack --config webpack.config.standalone",
    "build:external":
      "cross-env NODE_ENV=production webpack --config webpack.config.external",
    "build": "yarn clean && yarn build:standalone && yarn build:external",
    "precommit": "pretty-quick --staged",
    "prepublishOnly": "yarn build"
  },
  "devDependencies": {
    "babel-loader": "7.1.4",
    "cross-env": "5.1.4",
    "css-loader": "0.28.11",
    "eslint": "4.19.1",
    "eslint-config-prettier": "2.9.0",
    "eslint-plugin-prettier": "2.6.0",
    "monaco-editor": "0.15.6",
    "prettier": "1.11.1",
    "pretty-quick": "1.4.1",
    "rimraf": "2.6.2",
    "style-loader": "0.20.3",
    "webpack": "4.25.1",
    "webpack-cli": "3.1.2"
  },
  "dependencies": {},
  "homepage": "https://github.com/peterschussheim/monaco-editor",
  "keywords": ["monaco"]
}
